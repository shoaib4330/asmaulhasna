<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView_name_design"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/name_view_backg_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_NameInArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="80dp"
            android:text="SampleText"
            android:textColor="@color/name_view_text_color"
            android:textSize="35sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_NameTranslationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:lines="2"
            android:text="SampleText"
            android:textColor="@color/name_view_text_color"
            android:textSize="20sp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_namePlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/play" />

    </LinearLayout>

</android.support.v7.widget.CardView>